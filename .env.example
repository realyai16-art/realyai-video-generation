# Example environment variables for this project
# Copy this file to .env and fill in real secrets before running the app.

# Folders (optional)
UPLOAD_FOLDER=uploads
VIDEO_FOLDER=generated
METADATA_FOLDER=metadata
LOG_FILE=generation_log.txt

# Gemini / Google GenAI API key (replace with your key)
GEMINI_API_KEY=your_gemini_api_key_here

# Database connection options
# Either provide a single DATABASE_URL or individual DB_* variables
# Example DATABASE_URL: postgresql://username:password@hostname:5432/dbname
DATABASE_URL=postgresql://user:password@localhost:5432/realyai

# Individual DB settings (used if DATABASE_URL is not set)
DB_NAME=realyai
DB_USER=postgres
DB_PASSWORD=changeme
DB_HOST=127.0.0.1
DB_PORT=5432

